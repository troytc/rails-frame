<div class="container">
	<% if notice %>
		<div class="alert alert-fixed-top alert-info fade in">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= notice %>
		</div>
	<% end %>
	<% if alert %>
		<div class="alert alert-fixed-top alert-warning fade in">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= alert %>
		</div>
	<% end %>
</div>
